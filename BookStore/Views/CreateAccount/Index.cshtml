@model Models.EF.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CustomScript{
    <script>
        /////////////////////
        $('.btnDelete').off('click').on('click', function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Cart/Delete',
                data: { id: $(this).data('id') },
                dataType: 'json',
                type: 'POST',
                success: function (response) {
                    if (response.status == true) {
                        window.location.href = "/CreateAccount/Index";
                    }
                }
            })
        });
    </script>
}

<div class="section" style="padding-bottom:165px">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            @using (Html.BeginForm("Index", "CreateAccount", FormMethod.Post))
            {
                <form id="checkout-form" class="clearfix">
                    <div class="col-md-6">
                        <div class="billing-details">
                            <h2>Đăng ký</h2>

                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <fieldset>
                                <div class="form-group">
                                    <label>Tài khoản</label>
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @autofocus = "autofocus" })
                                </div>

                                <div class="form-group">
                                    <label>Mật khẩu</label>
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>Họ và tên</label>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                                </div>

                                <div class="form-group">
                                    <label>Giới tính</label>
                                    @Html.TextBoxFor(model => model.Gender, new { @class = "form-control", required = "required" })

                                </div>

                                <div class="form-group">
                                    <label>Địa chỉ</label>

                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", required = "required" })

                                </div>

                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })
                                </div>

                                <div class="form-group">
                                    <label>Số điện thoại</label>
                                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", required = "required" })

                                </div>


                                <div class="form-group">
                                    @Html.CheckBoxFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" }, required = "required" })
                                    <label>Chấp nhận các điều khoản</label>

                                </div>

                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-success btn-block">Đăng ký</button>
                            </fieldset>

                        </div>
                    </div>
                </form>
            }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>