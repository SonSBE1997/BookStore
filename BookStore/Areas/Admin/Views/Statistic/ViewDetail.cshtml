
@{
    ViewBag.Title = "ViewDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var ls = (List<Models.Common.StatisticSaleBook>)ViewBag.Data;
    var year = (int)ViewBag.Year;
    var month = (int)ViewBag.Month;
    decimal total = 0;
}


@section header{
    Chi tiết bán hàng tháng @month năm @year
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>

            <th>Tên sách</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    @foreach (var item in ls)
    {
        total += (decimal)@item.TotalPrice;
        <tr>
            <td>@item.BookName</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@item.TotalPrice</td>
        </tr>
    }

</table>
<div class="title_right">
    <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right top_search">
        <b>Tổng tiền:</b> @total
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @{ var link = "/Admin/Statistic/Index/" + @year;}
        <a href="@link" class="btn btn-default">Quay lại</a>
    </div>
</div>