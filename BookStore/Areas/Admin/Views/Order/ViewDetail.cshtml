@model Models.Common.Bill
@{
    ViewBag.Title = "ViewDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var lsOrderDetail = (List<Models.Common.BillDetail>)ViewBag.OrderDetail;
}

@section header{
    Chi tiết đặt hàng
}


<table class="table table-striped table-bordered table-hover">
    <tr>
        <td>Họ và tên</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Địa chỉ nhận hàng</td>
        <td>@Model.DeliveryAddress</td>
    </tr>
    <tr>
        <td>Ngày đặt hàng</td>
        <td>@Model.OrderDate</td>
    </tr>
    <tr>
        <td>Ngày nhận hàng</td>
        <td>@Model.DeliveryDate</td>
    </tr>
    <tr>
        <td>Tình trạng đặt hàng</td>
        <td>@Model.DeliveryStatus</td>
    </tr>
    <tr>
        <td>Tình trạng thanh toán</td>
        <td>@Html.Raw((bool)Model.Paid ? "Đã thanh toán" : "Chưa thanh toán")</td>
    </tr>
</table>

<div><h4>Chi tiết đơn hàng</h4></div>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in lsOrderDetail)
        {
            <tr id="row_@item.BillID">

                <td width="15%">
                    <div>
                        <img class="img-responsive" src="@item.CoverPhoto" alt="@item.BookName">
                    </div>
                </td>
                <td>@item.BookName</td>
                <td>@item.Quantity</td>
                <td>@item.Price VNĐ</td>
                <td>@item.TotalPrice VNĐ</td>

            </tr>
        }
    </tbody>
</table>
<div class="title_right">
    <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right top_search">
        <b>Tổng tiền:</b> @Model.TotalPrice
    </div>
</div>